{
    "name": "christianberkman/shelf",
    "description": "Software to manage a small library in an offline environment written in PHP.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Berkman",
            "email": "christianberkman@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "codeigniter4/devkit": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer --ansi fix",
        "phpstan": "phpstan analyze -l 6 -c phpstan.neon"
    }
}
